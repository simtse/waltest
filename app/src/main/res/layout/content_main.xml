<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:id="@+id/diff_db_w_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diff db - Delay - read w transaction"
        app:layout_constraintBottom_toTopOf="@+id/same_db_w_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/same_db_w_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same db - Delay - read w transaction"
        app:layout_constraintBottom_toTopOf="@+id/diff_db_without_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diff_db_w_trans"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/diff_db_without_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diff Db - Read w/o transaction"
        app:layout_constraintBottom_toTopOf="@+id/same_db_without_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/same_db_w_trans"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/same_db_without_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same Db - Read w/o transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diff_db_without_trans"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>